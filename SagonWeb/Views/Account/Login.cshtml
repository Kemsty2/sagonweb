@model SagonWeb.DTOs.Users.LoginUserDto

<!-- breadcrumb start -->
<div class="breadcrumb-main ">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="breadcrumb-contain">
                    <div>
                        <h2>login</h2>
                        <ul>
                            <li><a href="#">home</a></li>
                            <li><i class="fa fa-angle-double-right"></i></li>
                            <li><a href="#">login</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="login-page section-big-py-space bg-light">
    <div class="custom-container">
        <div class="row">
            <div class="col-xl-4 col-lg-6 col-md-8 offset-xl-4 offset-lg-3 offset-md-2">
                <div class="theme-card">
                    <h3 class="text-center">Login</h3>
                    <form class="theme-form" asp-action="Login">
                        <div class="form-group">
                            <label asp-for="Username">Email</label>
                            <input asp-for="Username" type="text" class="form-control" placeholder="Username" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required="">
                        </div>
                        <button type="submit" class="btn btn-normal">Login</button>
                        <a class="float-right txt-default mt-2" href="/Account/ForgetPassword" id="fgpwd">Forgot your password?</a>
                    </form>
                    <p class="mt-3">Sign up for a free account at our store. Registration is quick and easy. It allows you to be able to order from our shop. To start shopping click register.</p>
                    <a href="/Account/Register" class="txt-default pt-3 d-block">Create an Account</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->

<partial name="~/Views/Shared/Partial/Bar/_AccountBarPartial.cshtml" />
<partial name="~/Views/Shared/Partial/Bar/_CartBarPartial.cshtml" />
